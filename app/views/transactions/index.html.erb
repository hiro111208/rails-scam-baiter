<%= stylesheet_link_tag "welcome" %>
<%= navigation_bar %>

<div class="mx-2">
<p id="notice"><%= notice %></p>

<h1>Transactions</h1>
<%= link_to 'New Transaction', new_transaction_path, class:"btn btn-primary" %>

<table class="table">
  <thead>
    <tr>
      <th>Account</th>
      <th>Payee</th>
      <th>Amount</th>
      <th>Transaction type</th>
      <th>Balance</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.account_id %></td>
        <td><%= transaction.payee %></td>
        <td><%= transaction.amount %></td>
        <td><%= transaction.transaction_type %></td>
        <td><%= transaction.balance %></td>
        <td><%= transaction.date %></td>
        <td><%= link_to 'Show', transaction, class: "btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_transaction_path(transaction), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
