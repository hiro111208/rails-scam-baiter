<!-- This is a partial template. -->

<%= error_messages_for(f.object) %>

<table summary="transaction-form-fields">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-12">
            <h4>Transaction data</h4>
            <hr>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <form>
              <div class="form-group row">
                <label class="col-4 col-form-label">Date</label>
                <div class="col-8">
                  <%= f.date_field(:date, :class => "form-control edit-form") %>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-4 col-form-label">Payee</label>
                <div class="col-8">
                  <%= f.text_field(:payee, :class => "form-control edit-form") %>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-4 col-form-label">Amount</label>
                <div class="col-8">
                  <%= f.number_field(:amount, step: "0.01", :class => "form-control edit-form") %>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-4 col-form-label">Transaction Type</label>
                <div class="col-8">
                  <%= f.select(:transaction_type, [['CARD_PAYMENT', 'CARD_PAYMENT'], ['MANUAL_PAYMENT', 'MANUAL_PAYMENT'], ['RECEIVE', 'RECEIVE']], :class => "form-control edit-form") %>
                </div>
              </div>
              <div class="form-group row">
                <label class="col-4 col-form-label">Account ID</label>
                <div class="col-8">
                  <%= f.number_field(:account_id, value:@current_account.id, :class => "form-control edit-form uneditable-input", :readonly => true) %>
                </div>
              </div>

            </form>
          </div>
        </div>

      </div>
    </div>
  </div>
</table>
