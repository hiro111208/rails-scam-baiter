<%= stylesheet_link_tag "welcome" %>
<%= navigation_bar %>

<div class="users-index mx-2">
  <h2>Users</h2>

  <%= link_to("Add New User", new_user_path, :class => 'mx-2 btn btn-primary') %>

  <table class="table" summary="user-list">
    <tr class="header">
      <th>#</th>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Admin</th>
      <th>Actions</th>
    </tr>
    <% @users.each do |user| %>
      <tr>
        <td class="center"><%= user.id %></td>
        <td class="center"><%= user.firstName + " " + user.lastName %></td>
        <td class="center"><%= user.email %></td>
        <td class="center"><%= user.password %></td>
        <td class="center"><%= user.admin %></td>
        <td class="actions">
          <%= link_to("Show", user_path(user), :class => 'mx-2 btn btn-success') %>
          <%= link_to("Edit", edit_user_path(user), :class => 'mx-2 btn btn-warning') %>
          <%= link_to("Delete", user, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'mx-2 btn btn-danger') %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
