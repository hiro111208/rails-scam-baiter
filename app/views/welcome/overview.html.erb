<%= stylesheet_link_tag "welcome" %>


  <%= navigation_bar %>
  <% if user_signed_in? %>
  <h1> Hello <%=current_user.firstName%></h1>
  <div class="accounts">
  <% current_user.accounts.each do  |account| %>
    <div class="account">
    <h3> <%=account.account_type%> balance = <%= account.balance %></h3>
    <h4> Account number = <%=account.account_number%></h4>
    <h4> IBAN = <%=account.iban%></h4>
    <%= link_to "Transactions", "/welcome/transactions/"+account.id.to_s, class: "btn btn-primary" %>

</div>

  <% end %>


  <% end %>
</div>
