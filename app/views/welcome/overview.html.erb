<%= stylesheet_link_tag "welcome" %>

<div>
  <%= navigation_bar %>
  <% if user_signed_in? %>
  <h1> Hello <%=current_user.firstName%></h1>
  <% current_user.accounts.each do  |account| %>
    <div class="account">
    <h3> <%=account.account_type%> balance = <%= account.balance %></h3>
    <h4> Account number = <%=account.account_number%></h4>
    <h4> Sort code = <%=account.sort_code%></h4>
    <h4>Transactions:</h4>
    <table>
      <tr><th>Date</th><th>Amount</th><th>Currancy</th><th>Payee</th><th>Transaction type</th></tr>

    <% account.transactions.each do  |transaction | %>
      <tr>
        <td><%=transaction.date.to_date%></td>
        <td><%=transaction.amount%></td>
        <td><%=account.currency%></td>
        <td><%=transaction.payee%></td>
        <td><%=transaction.transaction_type%></td>
      </tr>
    <% end %>
  </table>
</div>

  <% end %>


  <% end %>
</div>
