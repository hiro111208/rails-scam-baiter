<%= stylesheet_link_tag "welcome" %>
<%= navigation_bar %>

<div class="mx-2">
  <p id="notice"><%= notice %></p>

  <h2>Accounts</h2>

  <%= link_to 'New Account', new_account_path, class: "btn btn-primary"%>

  <table class="table">
    <thead>
    <tr>
      <th>User</th>
      <th>Currency</th>
      <th>Balance</th>
      <th>Account type</th>
      <th>Account number</th>
      <th>Iban</th>
      <th></th>
    </tr>
    </thead>

    <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td>
          <%= User.find(account.user_id).email %>
        </td>
        <td><%= account.currency %></td>
        <td><%= account.balance %></td>
        <td><%= account.account_type %></td>
        <td><%= account.account_number %></td>
        <td><%= account.iban %></td>
        <td>
          <%= link_to 'Show', account, class: "mx-2 btn btn-success" %>
          <%= link_to 'Edit', edit_account_path(account), class: "mx-2 btn btn-warning" %>
          <%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "mx-2 btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
